# Application
APP_PORT=3000
APP_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/admin

# JWT
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION=1h

# Logging
LOG_LEVEL=debug

# API Prefix
API_PREFIX=/api

# CORS
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:4200

# Rate Limiting
RATE_LIMIT_WINDOW_MS=15 * 60 * 1000
RATE_LIMIT_MAX=100

# Optional: Add these if you're using email service
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_email@example.com
# SMTP_PASS=your_email_password

# Optional: Add these if you're using Redis for caching
# REDIS_HOST=localhost
# REDIS_PORT=6379

# Optional: Add these if you're using AWS services
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1